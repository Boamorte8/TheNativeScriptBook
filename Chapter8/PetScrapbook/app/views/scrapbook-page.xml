<Page loaded="onLoaded">
    <StackLayout>
        <ListView items="{{ pages }}" itemTap="onItemTap">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{ title, title + ' Scrapbook Page' }}" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
        <Button tap="onAddTap" text="Add"/>
    </StackLayout>
</Page>