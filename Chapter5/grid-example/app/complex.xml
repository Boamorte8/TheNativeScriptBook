<Page xmlns="http://schemas.nativescript.org/tns.xsd">
  <StackLayout>
    <GridLayout rows="100,2*,*" columns="auto,*" width="300" height="500">
      <Label row="0" col="0" text="(0,0)" style="background-color: #CCCCCC;" />
      <Label row="0" col="1" text="(0,1)" style="background-color: #EEEEEE;" />
      <Label row="1" col="0" text="(1,0)" style="background-color: #EEEEEE;" />
      <Label row="1" col="1" text="(1,1)" style="background-color: #CCCCCC;" />
      <Label row="2" col="0" text="(2,0)" style="background-color: #CCCCCC;" />
      <Label row="2" col="1" text="(2,1)" style="background-color: #EEEEEE;" />
    </GridLayout>
  </StackLayout>
</Page>