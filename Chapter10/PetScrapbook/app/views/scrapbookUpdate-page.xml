<Page loaded="onLoaded">
    <Page.actionBar>
        <ActionBar title="{{ title, title + ' Page' }}" >
            <ActionItem tap="onDoneTap" ios.position="right" 
                text="Done" android.position="actionBar"/>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <StackLayout class="form">
            <StackLayout class="input-field">
                <Label class="label" text="Name:" />
                <TextField class="input" text="{{ title }}" hint="Enter name..." />
            </StackLayout>
            <StackLayout class="input-field">
                <Label class="label" text="{{ 'Birth date: (' + calcAge(year, month, day) + ' years old)' }}" />
                <DatePicker year="{{ year }}" month="{{ month }}" day="{{ day }}" />
            </StackLayout>
            <StackLayout class="input-field">
                <Label class="label" text="Gender:"></Label>
                <ListPicker items="{{ genders }}" selectedIndex="{{ gender }}" />
            </StackLayout>
        </StackLayout>
    </StackLayout>
</Page>